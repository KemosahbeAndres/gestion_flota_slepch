<odoo>
    <t t-name="gestion_flota_slepch.DocumentCategoryForm">
        <div class="o_form card p-4">
            <div class="o_field input-group mt-2">
                <label class="input-group-text" >Nombre</label>
                <input class="form-control" type="text" t-on-input="ev => state.name = ev.target.value" t-att-value="state.name" />
            </div>
            <div class="o_field form-check mt-2">
                <label class="form-check-label">Es Requerido</label>
                <input class="form-check-input" type="checkbox" t-on-change="ev => state.required = ev.target.checked" t-att-checked="state.required" />
            </div>
            <div class="o_field mt-2 input-group">
                <label class="input-group-text">Categor√≠a Padre</label>
                <select class="form-control" t-on-change="onChangeParentCategory">
                    <option value="">-- Ninguna --</option>
                    <t t-foreach="state.categories" t-as="cat" t-key="cat.id">
                        <option t-att-value="cat.id" t-att-selected="cat.id === state.parent_id"><t t-esc="cat.name"/></option>
                    </t>
                </select>
            </div>
            <div class="o_buttons mt-2 hstack gap-2">
                <button class="btn btn-primary" type="button" t-on-click="saveCategory">Guardar</button>
                <button class="btn btn-danger" type="button" t-on-click="resetForm">Cancelar</button>
            </div>
        </div>
    </t>
</odoo>